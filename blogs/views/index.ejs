<!DOCTYPE html>
<html>
  <head>
    <title>My Angular App!</title>
       <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>
  <body ng-app="blogs" ng-controller="MainCtrl">
      
      
    <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="page-header">
        <h1>Souqalmal Blog</h1>
      </div>

      <div ng-repeat="post in posts | orderBy: '-likes'">
      
          <div class="row"> 
                <span style="font-size:20px; margin-left:10px;">
                  <a ng-show="post.title" href="{{post.title}}">
                    <b>{{post.title}}</b>
                  </a>
                 </span> 
                  <span class="glyphicon glyphicon-thumbs-up"
                  ng-click="incrementLikes(post)"></span>
                    {{post.likes}}
                  <br>
                <span style="font-size:18px; margin-left:10px;margin-bottom:50px;">
                      {{post.desc}}
                </span>
         </div>
          <span style="margin-left:10px;margin-bottom:50px;">&nbsp;</span>
          
      </div>

      <form ng-submit="addPost()" style="margin-top:30px;">
        <h3>Add a new post</h3>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Title"  ng-model="title"></input>
        </div>
        <div class="form-group">
           <textarea ng-model="desc" rows="10" class="form-control"  placeholder="Description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>

    </div>
  </div>
      
   
  </body>
</html>